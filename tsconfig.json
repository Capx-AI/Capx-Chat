{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node", "express"],
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "noErrorTruncation": true,
    "maxNodeModuleJsDepth": 0
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["node_modules","test","src/scripts"]
}
